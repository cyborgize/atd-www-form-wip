(jbuild_version 1)

(ocamllex (atd_lexer atd_doc_lexer))
(menhir ((modules (atd_parser))))

(rule
 ((targets (atd_version.ml))
  (action
   (with-stdout-to ${@}
    (echo "let version = \"${version:atd}\"")))))

(library
 ((name atd)
  (public_name atd)
  (flags (:include ${ROOT}/ocamlflags.sexp))
  (wrapped false)
  (libraries (easy-format unix str))))
