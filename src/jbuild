(* -*- tuareg -*- *)
#require "unix"

let version =
  let ic = open_in "../VERSION" in
  let version = input_line ic in
  close_in ic;
  version

let () = Printf.ksprintf Jbuild_plugin.V1.send {|
(jbuild_version 1)

(ocamllex (ag_doc_lexer))

(rule
 ((targets (ag_version.ml))
  (action
   (with-stdout-to ${@}
    (echo "let version = \"%s\"")))))

(library
 ((name atdgen)
  (public_name atdgen)
  (wrapped false)
  (libraries (atd str biniou yojson))))
|} version
