(jbuild_version 1)

(ocamllex (ag_doc_lexer))

(rule
 ((targets (ag_version.ml))
  (action
   (with-stdout-to ${@}
    (echo "let version = \"${version:atd}\"")))))

(library
 ((name atdgen)
  (public_name atdgen)
  (flags (:include ${ROOT}/ocamlflags.sexp))
  (wrapped false)
  (libraries (atd str biniou yojson))))
